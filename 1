def find_balance_index(nums):
    total_sum = sum(nums)
    left_sum = 0

    for i in range(len(nums)):
        total_sum -= nums[i]

        if left_sum == total_sum:
            return i

        left_sum += nums[i]

    return -1

# Пример использования
nums = [1, 7, 3, 6, 2, 9]
result = find_balance_index(nums)

if result != -1:
    print(f"Индекс баланса: {result}")
else:
    print("Балансный индекс не найден.")
